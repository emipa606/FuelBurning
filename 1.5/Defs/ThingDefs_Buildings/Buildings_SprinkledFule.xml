<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="SprinkledFuelBase" ParentName="BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>FuelBurning.Building_SprinkledFuel</thingClass>
    <selectable>true</selectable>
    <drawerType>MapMeshOnly</drawerType>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <useHitPoints>true</useHitPoints>
    <rotatable>false</rotatable>
    <pathCost>20</pathCost>
    <stealable>false</stealable>
    <neverMultiSelect>true</neverMultiSelect>
    <soundImpactDefault>MeleeHit_Metal_Sharp</soundImpactDefault>
    <placeWorkers>
      <li>FuelBurning.PlaceWorker_SprinkledFuel</li>
    </placeWorkers>
    <alwaysHaulable>false</alwaysHaulable>
    <designateHaulable>false</designateHaulable>
    <staticSunShadowHeight>0.02</staticSunShadowHeight>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <isInert>true</isInert>
      <isEdifice>false</isEdifice>
      <expandHomeArea>false</expandHomeArea>
      <repairable>false</repairable>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/SprinkledFuels/SprinkledFuel_Blueprint_Atlas</texPath>
      </blueprintGraphicData>
    </building>
    <tradeNeverStack>true</tradeNeverStack>
    <altitudeLayer>MoteLow</altitudeLayer>
    <passability>Standable</passability>
    <blockWind>false</blockWind>
    <coversFloor>true</coversFloor>
    <castEdgeShadows>false</castEdgeShadows>
    <placingDraggableDimensions>2</placingDraggableDimensions>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <blockLight>false</blockLight>
    <blocksPlants>true</blocksPlants>
    <canOverlapZones>true</canOverlapZones>
    <filthLeaving>Filth_Ash</filthLeaving>
    <tickerType>Normal</tickerType>
  </ThingDef>
  <ThingDef ParentName="SprinkledFuelBase">
    <defName>SprinkledFuelSmall</defName>
    <label>Sprinkled fuel (diluted)</label>
    <description>It burns up by slight impact, and burns out quickly. It can be used as a fuse.</description>
    <fillPercent>0</fillPercent>
    <pathCost>0</pathCost>
    <graphicData>
      <texPath>Things/Building/Linked/SprinkledFuels/SprinkledFuel_Small_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Custom4</li>
      </linkFlags>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <constructEffect>SprinklingOil_ShortTime</constructEffect>
    <uiIconPath>Things/Building/Linked/SprinkledFuels/SprinkledFuel_Small_MenuIcon</uiIconPath>
    <statBases>
      <Flammability>3.0</Flammability>
      <WorkToBuild>20</WorkToBuild>
      <Beauty>-5</Beauty>
      <BurningTime>2</BurningTime>
      <MaxHitPoints>2</MaxHitPoints>
    </statBases>
    <costList>
      <Chemfuel>1</Chemfuel>
    </costList>
    <size>(1,1)</size>
    <comps>
      <li Class="FuelBurning.CompProperties_FlammableLink">
        <compClass>FuelBurning.FlammableLinkComp</compClass>
        <connectionID>1</connectionID>
        <ignitionDef>Ignition_Small</ignitionDef>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="SprinkledFuelBase">
    <defName>SprinkledFuelMedium</defName>
    <label>Sprinkled fuel</label>
    <description>This is a mixture of wood and fuel. It will burn well.</description>
    <fillPercent>0</fillPercent>
    <pathCost>10</pathCost>
    <graphicData>
      <texPath>Things/Building/Linked/SprinkledFuels/SprinkledFuel_Medium_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>Basic</linkType>
      <shaderType>Transparent</shaderType>
      <linkFlags>
        <li>Custom4</li>
      </linkFlags>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <constructEffect>SprinklingOil_ShortTime</constructEffect>
    <uiIconPath>Things/Building/Linked/SprinkledFuels/SprinkledFuel_Medium_MenuIcon</uiIconPath>
    <statBases>
      <Flammability>2.0</Flammability>
      <WorkToBuild>75</WorkToBuild>
      <Beauty>-10</Beauty>
      <BurningTime>20</BurningTime>
      <MaxHitPoints>15</MaxHitPoints>
    </statBases>
    <costList>
      <Chemfuel>1</Chemfuel>
      <WoodLog>1</WoodLog>
    </costList>
    <size>(1,1)</size>
    <comps>
      <li Class="FuelBurning.CompProperties_FlammableLink">
        <compClass>FuelBurning.FlammableLinkComp</compClass>
        <connectionID>1</connectionID>
        <ignitionDef>Ignition_Medium</ignitionDef>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="SprinkledFuelBase">
    <defName>SprinkledFuelLarge</defName>
    <label>Sprinkled fuel(concentrated)</label>
    <description>It keeps burning for a long time but is hard to ignite. Sometimes it explodes when it burns.</description>
    <fillPercent>0</fillPercent>
    <pathCost>20</pathCost>
    <graphicData>
      <texPath>Things/Building/Linked/SprinkledFuels/SprinkledFuel_Large_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
      <linkType>Basic</linkType>
      <linkFlags>
        <li>Custom4</li>
      </linkFlags>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <constructEffect>SprinklingOil_LongTime</constructEffect>
    <uiIconPath>Things/Building/Linked/SprinkledFuels/SprinkledFuel_Large_MenuIcon</uiIconPath>
    <statBases>
      <Flammability>1.0</Flammability>
      <WorkToBuild>220</WorkToBuild>
      <Beauty>-15</Beauty>
      <BurningTime>60</BurningTime>
      <MaxHitPoints>45</MaxHitPoints>
    </statBases>
    <costList>
      <Chemfuel>2</Chemfuel>
      <WoodLog>2</WoodLog>
    </costList>
    <size>(1,1)</size>
    <comps>
      <li Class="FuelBurning.CompProperties_FlammableLink">
        <compClass>FuelBurning.FlammableLinkComp</compClass>
        <connectionID>1</connectionID>
        <ignitionDef>Ignition_Large</ignitionDef>
      </li>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>1.5</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
        <chanceNeverExplodeFromDamage>0.018</chanceNeverExplodeFromDamage>
      </li>
    </comps>
  </ThingDef>
</Defs>